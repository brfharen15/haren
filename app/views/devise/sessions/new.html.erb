<h1 class="text-center">
  Sign in
</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="form-inputs">
    <%= form.input :email, required: false, autofocus: true %>
    <%= form.input :password, required: false %>
    <%= form.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= form.button :submit, 'Log in' %>
  </div>
<% end %>
